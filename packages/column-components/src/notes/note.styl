g.note
  circle
    fill: black
  line
    stroke: black
    stroke-width: 2
    marker-start: url('#arrow_start')
    marker-end: url('#arrow_end')
  p.note-label, div.note-label
    padding-left: 0.3em
    border-left: 1px solid black
    //margin-top: -8px
    //transform: translateY(-50%)
    font-style: italic
    font-size: 10px
    margin: 0
    z-index: 15
    a.photos-link
      font-style: bold
      display: inline-block
      margin-left: 1em
  //div.note-label
  // transform: translateY(30px)
  path.link
    stroke: #000
    stroke-width: 1
    fill: none

:global(.note-label)
  top: 0
  left: 0
  right: 0
  bottom: 0
