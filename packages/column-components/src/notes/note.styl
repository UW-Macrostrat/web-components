@require "./note-editor.styl"

.col-note-label
  padding-left: 0.3em
  border-left: 1px solid var(--note-color)
  //margin-top: -8px
  //transform: translateY(-50%)
  font-style: italic
  margin: 0
  z-index: 15

g.height-range
  line
    stroke: var(--note-color)
    stroke-width: 1.2px
    //marker-start: url('#arrow_start')
    //marker-end: url('#arrow_end')

g.note, g.note-editor
  --note-color: var(--column-note-color, black)
  circle
    fill: var(--note-color)

  //div.note-label
  // transform: translateY(30px)
  .link
    stroke: var(--note-color)
    stroke-width: 1
    fill: none

.new-note
  circle
    fill: dodgerblue
  line
    stroke: dodgerblue
    stroke-width: 3
    marker-start: url('#new_arrow_start')
    marker-end: url('#new_arrow_end')

#new_arrow_start, #new_arrow_end
  fill dodgerblue
