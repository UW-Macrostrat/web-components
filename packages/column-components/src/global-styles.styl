
g.lithology-column
  use.frame
    stroke: black
    stroke-width 1px
  rect.lithology
    stroke #aaa
    stroke-width: 0.25pt
    &.definite
      stroke: black
  rect.covered-area
    fill: red
    fill-opacity 0.2
    pointer-events none

div.section-header
  h2
    margin-top 0

g.covered-column
  rect.covered-area
    fill: red
    fill-opacity: 1


div.section-container
  position: relative
  &.skeleton
    h2, p
      color: blue

.y.axis
  line
    stroke: black
    stroke-width: 2px
  path
    stroke: black
    stroke-width: 0
  text
    font-size: 12px
    font-weight: bold
// Main section

div.section-outer
  display: flex
  flex-direction: row
  width: 100%
  svg.overlay
    z-index: 10

g.section-log
  g.note
    circle
      fill: black
    line
      stroke: black
      stroke-width: 2
      marker-start: url('#arrow_start')
      marker-end: url('#arrow_end')
    p.note-label, div.note-label
      padding-left: 0.3em
      border-left: 1px solid black
      //margin-top: -8px
      //transform: translateY(-50%)
      font-style: italic
      font-size: 10px
      margin: 0
      z-index: 15
      a.photos-link
        font-style: bold
        display: inline-block
        margin-left: 1em
    //div.note-label
    // transform: translateY(30px)
    path.link
      stroke: #000
      stroke-width: 1
      fill: none

.grainsize.axis
  text
    font-family: 'Helvetica Neue'
    text-anchor: middle
    font-size: 10
    font-style: italic
    &.top
      transform: translate(0,-2px)
    &.bottom
      transform: translate(0,10px)
  line
    stroke: lighten(dodgerblue, 0.5)
    stroke-width: 1px
    stroke-dasharray: 2,2

.note.error
  p
    color: darken(red,0.2) !important
  background: alpha(red, 0.2) !important

g.samples g.sample
  text
    alignment-baseline: middle
    text-anchor: end
    font-size: 10px
    font-style: italic
  circle
    fill: black

div.photo-dialog
  width: 90%
  height: 80vh
  top: 10vh

  div.image-gallery-image img
    max-width 100%

rect.symbol-column-area
  fill none

g.triangle-bars path
  fill #aaa
  stroke #888
  stroke-width: 1.5px

div.Select-menu-outer
  z-index 15

div.edit-overlay div.cursor-container
  position absolute
  .bp3-popover-wrapper
    display block
    width 80px
