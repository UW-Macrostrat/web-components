{
  "name": "@macrostrat/style-system",
  "version": "0.2.0",
  "description": "Style system for Macrostrat",
  "main": "dist/style-system.css",
  "source": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && vite build"
  },
  "dependencies": {
    "@blueprintjs/colors": "^5.1.1",
    "@blueprintjs/core": "^5.10.2"
  },
  "peerDependencies": {
    "react": "^16.13.1||^17||^18",
    "react-dom": "^16.13.1||^17||^18"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/style-system.css",
      "require": "./dist/style-system.css"
    },
    "./src/colors.scss": {
      "source": "./src/colors.scss",
      "import": "./src/colors.scss"
    },
    "./src/main.scss": {
      "source": "./src/main.scss",
      "import": "./src/main.scss"
    },
    "./src/index.ts": {
      "source": "./src/index.ts",
      "import": "./dist/style-system.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UW-Macrostrat/web-components.git",
    "directory": "packages/style-system"
  },
  "keywords": [
    "macrostrat",
    "style",
    "geology"
  ],
  "devDependencies": {
    "vite": "^6.1.0"
  }
}
