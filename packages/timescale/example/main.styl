*
  box-sizing border-box

body
  margin 0
  height 100vh
  width 100vw
  overflow scroll

.timescale-ui
  display flex
  margin 0 auto
  .timescale
    padding 2em
  &.horizontal
    flex-direction column
    width max-content
    .timescale
      width max-content
      margin-top 25em
    .control-array
      width 60em
      position fixed
      top 0
      left 0
      right 0
      margin 2em auto
      .control-panel
        float right
  &.vertical
    max-width 60em
    flex-direction row

.spacer
  flex-grow 1

.control-panel
  width 30em
  position sticky
  top 2em
  right 2em
  &>*
    margin-bottom 1em

.control-array
  position relative
