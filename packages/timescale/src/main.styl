.interval
  display flex

.interval-box
  min-width 1em
  position relative

.timescale
  display flex
  position relative
  .interval-box
    margin 1px
    overflow hidden
    &:last-child
      flex-grow 1

  .children
    flex 1
    display flex

  &.horizontal
    flex-direction column
    .interval
      flex-direction: column;
    .children
      flex-direction row-reverse

  &.vertical
    flex-direction row
    .interval
      flex-direction: row;
    .children
      flex-direction column
  .interval-label
    padding 5px 2px
    font-size 12px

// For vertical labels
.timescale.vertical
  .interval-label
    writing-mode vertical-lr
    transform: rotate(180deg)
    text-align: center
    position: sticky
    top: 50%
    max-height: 100vh

