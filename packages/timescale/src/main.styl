.interval
  display flex

.interval-box
  position relative

.timescale
  display flex
  position relative
  .interval-box
    margin 0.5px
    position relative
    overflow hidden
    &:last-child
      flex 1

  .children
    flex 1
    display flex

  &.horizontal
    flex-direction column
    .interval
      flex-direction: column;
    .children
      flex-direction row-reverse
    .interval-label
      position: sticky
      max-width: 100vw
      display block
      margin 0 auto
      text-align center

  &.vertical
    flex-direction row
    .interval-box
      min-width 2em
    .interval
      flex-direction: row;
    .children
      flex-direction column
    .interval-label
      writing-mode vertical-lr
      transform: rotate(180deg)
      position: sticky
      top: 50%
      max-height: 100vh

  .interval-label
    padding 5px 2px
    font-size 12px
    display inline-block



