.interval
  display flex
  flex-direction: row

.interval-box
  min-width 1em
  position relative

.timescale
  display flex
  flex-direction column;


// For vertical labels
.timescale.vertical
  display: flex
  flex-direction row
  position relative
  .interval-box
    margin 1px
    &:last-child
      flex-grow 1
  .children
    flex-grow 1
  .interval-label
    padding 5px 2px
    writing-mode vertical-lr
    transform: rotate(180deg)
    font-size 12px
    text-align: center
    position: sticky
    top: 50%
    max-height: 100vh

