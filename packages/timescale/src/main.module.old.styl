.interval
  display flex

.interval-box
  position relative

:root
  --timescale-cursor-color: black
  --timescale-background-color: white
  --timescale-text-color: black
  --timescale-level-size: 2em
  --timescale-level-width: var(--timescale-level-size)
  --timescale-level-height: var(--timescale-level-size)

.timescale-container
  display flex
  position relative
  box-sizing border-box

  .interval-box
    margin 0.5px
    position relative
    overflow hidden
    display flex
    align-items center
    justify-content: center
    &:last-child
      flex 1

  .children
    flex 1
    display flex

  .cursor
    position absolute
    display flex
    align-items: center
    .cursor-text
      color: var(--timescale-cursor-color)
      background-color: var(--timescale-background-color)
      white-space: nowrap
      text-align center
    .cursor-line
      background-color var(--timescale-cursor-color)
      width: 4px
      z-index 20
      border 1px solid var(--timescale-background-color)

  :global(.interval-label)
    padding 5px 2px
    font-size 12px
    display block
    //display inline-block

  &:global(.horizontal)
    flex-direction column
    .interval
      flex-direction: column;
    .interval-box
      min-height var(--timescale-level-height)
    .children
      flex-direction row-reverse
    :global(.interval-label)
      color: var(--timescale-text-color)
      position: sticky
      max-width: 100vw
      display block
      margin 0 auto
      text-align center

    .cursor
      transform: translate(-2px)
      top: -0.5px
      bottom: -3.5px
      width 0
      flex-direction column-reverse

      .cursor-text
        transform: translate(0,1px)
        text-align center
      .cursor-line
        width 4px
        height 100%

  &:global(.vertical)
    flex-direction row

    .interval-box
      min-width var(--timescale-level-width)
    .interval
      flex-direction: row;
      &:last-child
        flex-grow 1
    .children
      flex-direction column
    :global
      .interval-label
        width: 0px
        .label-text
          writing-mode vertical-lr
          transform: rotate(180deg) translateX(8px)

      // display: block
      // height 100%
      // text-align center


    .cursor
      left: 1px
      transform: translate(0,-2px)
      right: -1px
      width 0
      flex-direction row
      .cursor-text
        transform: translate(1px,0)
        text-align center
      .cursor-line
        height 2px
        width 100%


  :global(.vx-axis)
    path, line
      stroke: var(--timescale-cursor-color)
    text
      fill: var(--timescale-cursor-color)
